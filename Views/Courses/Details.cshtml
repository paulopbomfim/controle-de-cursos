@model Course
@{
    ViewData["Title"] = "Curso";
}

<div class="w-full flex flex-col items-start gap-4 text-white mt-20">
    @if(Model != null)
    {
        <div class="flex gap-4">
            <a asp-controller="Courses" asp-route-id="@Model.Id" asp-action="Edit" class="p-4 bg-sky-500 hover:bg-sky-400 transition rounded-md cursor-pointer">
                Editar informações
            </a>
            <a class="p-4 bg-emerald-500 hover:bg-emerald-400 transition rounded-md cursor-pointer">
                Matricular Lead
            </a>
        </div>

        <h1 class="text-6xl mt-10 font-bold">@Model.Name</h1>
        <p>@Model.Description</p>

        <h2 class="text-2xl mt-4 font-bold">Leads matriculados</h2>
        @foreach(var lead in Model.Leads)
        {
            <a class="text-zinc-800 bg-white px-4 py-2 cursor-pointer rounded-md flex items-center gap-2">
                @lead.Name
                <i class="ph-arrow-square-out-bold text-sky-500"></i>
            </a>
        }
    }
</div>