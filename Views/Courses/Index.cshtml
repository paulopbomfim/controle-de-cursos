@model List<Course>
@{
    ViewData["Title"] = "Cursos";
}

<div class="flex flex-col items-center w-full mt-20">
    <div class="flex justify-start items-center gap-12 w-full">
        <h1 class="text-4xl font-bold">
            Cursos
        </h1>
        
        <a asp-area="" asp-controller="Courses" asp-action="Create" class="flex text-lg font-bold items-center gap-2 p-4 bg-emerald-500 rounded-md hover:bg-emerald-400 transition cursor-pointer" >
            <i class="ph-plus-bold text-xl"></i>
            Adicionar curso
        </a>
    </div>

    <table class="mt-20 w-full text-left border-separate border-spacing-y-2 ">
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th class="text-center">Excluir</th>
            <th class="text-right">Detalhes</th>
        </tr>
        <a >
            @if(Model != null && Model.Any())
            {
                foreach(Course course in Model)
                {
                    <tr class="text-zinc-800 bg-gray-100 align-middle ">
                        <td class="p-4 rounded-l-md">@course.Name</td>
                        <td>@course.Description</td>
                        <td class="text-center">
                            <a class="cursor-pointer" asp-controller="Courses" asp-route-id="@course.Id" asp-action="Delete">
                                <i class="ph-trash-bold align-middle text-rose-500 text-2xl"></i>
                            </a>
                        </td>
                        <td class="text-right pr-6 rounded-r-md">
                            <a class="cursor-pointer" asp-controller="Courses" asp-route-id="@course.Id" asp-action="Details">
                                <i class="ph-arrow-square-out-bold align-middle text-sky-500 text-2xl"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </a>
    </table>
</div>
